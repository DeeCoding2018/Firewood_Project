@{
    ViewBag.Title = "Contact";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
    <title>Home</title>
    <link rel="stylesheet" type="text/css" href="~/Content/FirewoodStyleSheet.css" />
    <script src="JavaScript_Login.js" type="text/javascript"></script>
</head>

<body>
    <!--Header ----------------------------------------------------------------------------->
    <header>FIREWOOD PROJECT</header>
    <!--Navbar ------------------------------------------------------------------------------>
    <div class="container-fluid">
        <nav class="navbar ">
            <div class="container-fluid">
                <div class="row">
                    <div class="navbar-header">
                        <ul class="nav navbar-nav">
                            <li>
                                <a href="@Url.Action("Index", "Home")" class="elements">
                                    <span>Home</span>
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("About", "Home")" class="elements">
                                    <span>About</span>
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("Order", "Home")" class="elements">
                                    <span>Order</span>
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("Contact", "Home")" class="elements">
                                    <span>Contact</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </div>

    <!--Main image -------------------------------------------------------------------------->
    <div class="container-fluid">
        <img class="img1" src="~/Content/images/FWP.png" />
    </div>

    <form>
        <div align="right" id="login">
            <input class="usern" type="text" id="user" name="user" placeholder="Username" />
            <input class="pass" type="text" id="psw" name="password" placeholder="Password" />
            <input class="loginBtn" type="submit" name="submit" value="Login" onclick="return loginValidation();" /><br /><br />
            Not a Member? <input class="registerBtn" type="button" name="" value="Register" onclick="window.location.href='~/Views/Home/Register.html'" />
        </div>
    </form>

    <!--Contact Info text ----------------------------------------------------------------------------->
    <div class="contact">
        <h3><strong>Contact Us</strong></h3>
        <p>
