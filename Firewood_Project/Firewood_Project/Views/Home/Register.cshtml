@model Firewood_Project.Models.Registration

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{

    if (IsPost)
    {
        string username = Request.Form["user"];
        string password = Request.Form["psw"];
        string firstName = Request.Form["fname"];
        string lastName = Request.Form["lname"];
        string address = Request.Form["address"];
        string zipCode = Request.Form["zipcode"];
        string phoneNumber = Request.Form["phone"];
        string emailAddress = Request.Form["email"];

        <text>
            You entered: <br />
            Username: @username <br />
            Password: @password <br />
            First Name: @firstName <br />
            Last Name: @lastName <br />
            Address: @address <br />
            Zip Code: @zipCode <br />
            Phone Number: @phoneNumber <br />
            Email Address: @emailAddress <br />
        </text>

